<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="960.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.forzaraceselector.Controller">
   <children>
      <VBox layoutX="-1.0" prefHeight="883.0" prefWidth="234.0" spacing="20.0" style="-fx-background-color: #ff003b;">
          <padding>
              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
          </padding>
      
          <CheckBox fx:id="roadRaceCheckBox" text="Road Races" />
          <CheckBox fx:id="dirtRaceCheckBox" text="Dirt Races" />
          <CheckBox fx:id="crossCountryRaceCheckBox" text="Cross Country Races" />
          <CheckBox fx:id="dragRaceCheckBox" text="Drag Races" />
          <CheckBox fx:id="streetRaceCheckBox" text="Street Races" />
      </VBox>
      <Pane layoutX="233.0" layoutY="697.0" prefHeight="263.0" prefWidth="1047.0">
         <children>
            <VBox alignment="CENTER" prefHeight="263.0" prefWidth="258.0">
               <children>
                   <Label fx:id="raceText" prefHeight="61.0" prefWidth="78.0" />
               </children>
            </VBox>
            <VBox alignment="CENTER" layoutX="258.0" prefHeight="263.0" prefWidth="258.0">
               <children>
                   <Label fx:id="carText" />
               </children>
            </VBox>
            <VBox alignment="CENTER" layoutX="524.0" prefHeight="263.0" prefWidth="258.0">
               <children>
                   <Label fx:id="performanceText" />
               </children></VBox>
            <VBox alignment="CENTER" layoutX="782.0" prefHeight="263.0" prefWidth="266.0">
               <children>
                   <Label fx:id="tuneText" />
               </children></VBox>
         </children>
      </Pane>
      <ImageView fitHeight="960.0" fitWidth="1047.0" layoutX="233.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/SelectorBackground.jpg" />
         </image>
      </ImageView>
      <HBox alignment="CENTER" layoutX="-1.0" layoutY="883.0" prefHeight="83.0" prefWidth="234.0" style="-fx-background-color: #ff003b;">
         <children>
             
             <Button alignment="CENTER" onAction="#onSelectButtonClick" prefHeight="53.0" prefWidth="224.0" text="Find me a race!">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
